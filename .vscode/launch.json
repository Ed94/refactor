	"version": "0.2.0",
	"configurations": [
		{
			"name": "Refactor ZPL",
			"type": "cppvsdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/refactor.exe",
			"args": [
				"-src=./thirdparty/zpl.h",
				"-dst=./Test/zpl.refactored.h",

				"-spec=./Test/zpl.refactor"
			],
			"stopAtEntry": false,
			"cwd": "${workspaceRoot}",
			"environment": [],
			"console": "integratedTerminal"
		},
