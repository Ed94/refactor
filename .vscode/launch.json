	"version": "0.2.0",
	"configurations": [
		{
			"name": "Refactor ZPL",
			"type": "cppvsdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/refactor.exe",
			"args": [
				"-source=./thirdparty/zpl.h",
				"-destination=./Test/zpl.refactored.h",

				"-specification=./Test/zpl.h.refactor"
			],
			"stopAtEntry": false,
			"cwd": "${workspaceRoot}",
			"environment": [],
			"console": "externalTerminal"
		}
		{
			"name": "Refactor refactor.c",
			"type": "cppvsdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/refactor.exe",
			"args": [
				"-source=./refactor.cpp",
				"-destination=./Test/refactor.cpp",

				"-specification=./Test/zpl.h.refactor"
			],
			"stopAtEntry": false,
			"cwd": "${workspaceRoot}",
			"environment": [],
			"console": "externalTerminal"
		}
	]
}